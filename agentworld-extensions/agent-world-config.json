{
  "_comment": "Agent World Extensions Configuration",
  "_usage": "Hierarchical config loading: Environment Variables > Isaac Sim Settings > JSON Config > Defaults",
  "_environment_examples": "WORLDBUILDER_DEBUG_MODE=true, WORLDVIEWER_SERVER_PORT=8901",

  "validation": {
    "_comment": "Centralized input validation configuration",
    "strict_validation": true,
    "enable_debug_logging": false,
    "custom_validation_rules": {},
    "security_level": "strict"
  },
  "worldbuilder": {
    "server_port": 8899,
    "server_host": "localhost",
    "debug_mode": false,
    "verbose_logging": false,
    "auth_enabled": true,
    "startup_delay": 0.1,
    "shutdown_timeout": 5.0,
    "enable_batch_operations": true,
    "max_elements_per_batch": 100,
    "max_completed_requests": 100,
    "max_operations_per_cycle": 5,
    "auto_save_scene": false,
    "scene_validation_enabled": true,

    "_comment_security": "Asset path security configuration",
    "asset_search_paths": [
      "/home/sherndon/agent-world/assets",
      "./assets",
      "./models",
      "./textures",
      "./scenes"
    ],
    "allow_absolute_asset_paths": false,
    "validate_asset_paths": true,
    "max_asset_file_size_mb": 100,
    "log_asset_access": false,
    "allowed_asset_extensions": [".usd", ".usdz", ".usda", ".jpg", ".jpeg", ".png", ".tiff", ".exr"]
  },
  "worldviewer": {
    "server_port": 8900,
    "server_host": "localhost",
    "debug_mode": false,
    "verbose_logging": false,
    "auth_enabled": true,
    "startup_delay": 0.1,
    "shutdown_timeout": 5.0,
    "enable_cinematic_mode": true,
    "default_movement_duration": 3.0,
    "max_movement_duration": 60.0,
    "smooth_movement_enabled": true,
    "camera_bounds_checking": true
  },
  "worldsurveyor": {
    "server_port": 8891,
    "server_host": "localhost",
    "debug_mode": false,
    "verbose_logging": false,
    "auth_enabled": false,
    "_comment_auth": "Keep auth_enabled=false - waypoint manager webpage requires unauthenticated access",
    "hotkey_enabled": false,
    "startup_delay": 0.1,
    "shutdown_timeout": 5.0,
    "enable_waypoint_persistence": true,
    "waypoint_marker_scale": 1.0,
    "auto_save_waypoints": true,
    "waypoint_visibility_default": true,
    "max_waypoints_per_group": 1000,
    "marker_cleanup_on_shutdown": true
  },
  "worldrecorder": {
    "server_port": 8892,
    "server_host": "localhost",
    "debug_mode": false,
    "verbose_logging": false,
    "auth_enabled": true,
    "startup_delay": 0.1,
    "shutdown_timeout": 5.0,
    "default_fps": 24,
    "max_recording_duration": 300,
    "output_directory": "/tmp/recordings",
    "auto_cleanup_recordings": false,
    "max_queue_size": 100,
    "hardware_encoding_preferred": true,
    "capture_depth_buffer": false
  },
  "worldstreamer.rtmp": {
    "server_port": 8906,
    "server_host": "localhost",
    "debug_mode": false,
    "verbose_logging": false,
    "auth_enabled": true,
    "startup_delay": 0.1,
    "shutdown_timeout": 5.0,
    "rtmp_port": 1935,
    "stream_timeout": 30.0,
    "ip_detection_timeout": 5.0,
    "max_concurrent_streams": 1,
    "connection_validation_enabled": true,
    "environment_validation_enabled": true,
    "encoding_fps": 24,
    "encoding_bitrate": 2000,
    "encoder_type": "auto"
  },
  "worldstreamer.srt": {
    "server_port": 8908,
    "server_host": "localhost",
    "debug_mode": false,
    "verbose_logging": false,
    "auth_enabled": true,
    "startup_delay": 0.1,
    "shutdown_timeout": 5.0,
    "srt_url": "srt://127.0.0.1:9999?mode=caller&latency=50&transtype=live",
    "encoding_fps": 24,
    "encoding_bitrate": 2000,
    "encoder_type": "auto"
  }
}
