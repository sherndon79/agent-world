# Dockerfile for MCP servers
FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Create virtual environment
RUN python -m venv /app/venv
ENV PATH="/app/venv/bin:$PATH"

# Install Python dependencies
# Copy requirements from the actual mcp-servers
COPY docker/mcp-servers/requirements.txt /app/requirements.txt
RUN pip install --no-cache-dir -r requirements.txt

# Install shared agentworld-core package
COPY agentworld-core /app/agentworld-core
RUN pip install --no-cache-dir /app/agentworld-core

# MCP SDK is already included in requirements.txt as 'mcp>=1.13.1'

# Copy shared modules and MCP server source code
COPY docker/mcp-servers/shared /app/shared
COPY docker/mcp-servers/worldbuilder /app/worldbuilder
COPY docker/mcp-servers/worldviewer /app/worldviewer
COPY docker/mcp-servers/worldsurveyor /app/worldsurveyor
COPY docker/mcp-servers/worldstreamer /app/worldstreamer
COPY docker/mcp-servers/worldrecorder /app/worldrecorder

# Set environment variables
ENV PYTHONPATH="/app:/app/shared"
ENV PYTHONUNBUFFERED=1

# Create entrypoint script
COPY docker/mcp-servers/entrypoint.sh /app/entrypoint.sh
RUN chmod +x /app/entrypoint.sh

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python -c "import sys; sys.exit(0)"

# Default command
ENTRYPOINT ["/app/entrypoint.sh"]
